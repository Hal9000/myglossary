<%- model_class = Word -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:word) %>:</strong></dt>
  <dd><%= @word.word %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @word.status %></dd>
  <% if @word.user.present? %>
    <dt><strong><%= model_class.human_attribute_name(:owner) %>:</strong></dt>
    <dd><%= @word.user&.name || "Unclaimed" %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:definition) %>:</strong></dt>
  <dd><%= simple_format @word.definition %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= simple_format @word.notes %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              words_path, :class => 'btn btn-secondary'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_word_path(@word), :class => 'btn btn-secondary' if @word.can_edit?(current_user) %>
