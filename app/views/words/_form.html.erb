<%= form_for @word, :html => { :class => "form-horizontal word" } do |f| %>

  <% if @word.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@word.errors.count, "error") %> prohibited this word from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @word.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!--
       HF two things -
       Can we display owner (if any)?
       Make status a dropdown if admin??
   -->

  <div class="form-group">
    <%= f.label :word, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :word, :class => 'form-control' %>
    </div>
    <%=f.error_span(:word) %>
  </div>
  <div class="form-group">
    <%= f.label :definition, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :definition, :class => 'form-control', rows: 8 %>
    </div>
    <%=f.error_span(:definition) %>
  </div>
  <div class="form-group">  <!-- HF did I do this right? -->
    <%= f.label :notes, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :notes, :class => 'form-control', rows: 10 %>
    </div> <!-- HF see table below - want it *next* to this -->
    <%=f.error_span(:notes) %>
  </div>

